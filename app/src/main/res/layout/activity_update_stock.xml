<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".adminmain.UpdateStockActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/titleTV"
        android:inputType="text"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:text="Title"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/categoryTV"
            android:textColor="@color/black"
            android:inputType="text"
            android:layout_marginTop="20dp"
            android:textStyle="italic"
            android:layout_marginBottom="10dp"
            android:text="Category"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/manufacturerTV"
            android:inputType="text"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text=" - Manufacturer"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:hint="Current Stock - "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentStock"
            android:inputType="text"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:hint="20"/>


    </LinearLayout>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stockET"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:hint="New Quanity - 10"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/update"
        android:layout_marginTop="30dp"
        android:backgroundTint="#81D7FD"
        android:layout_gravity="center"
        android:text="Update"/>

</LinearLayout>